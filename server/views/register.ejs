<form action="/register" method="post">	
	<dl>
		<dt><label>Username</label></dt>
		<dd><input type="text" name="username" value="" id="username" /></dd>          
		
		<dt><label>Email Address</label></dt>
		<dd><input type="text" name="email_address" value="" id="email_address" /></dd>
		
		<dt><label>Password</label></dt>
		<dd><input type="password" name="password" value="" id="password" /></dd>
		
		<dt><label>Confirm Password</label></dt>
		<dd><input type="password" name="confirm_password" value="" id="confirm_password" /></dd>
		
		<dt><label>I agree to the terms</label></dt>
		<dd><input type="checkbox" name="agree_to_terms" value="true" id="agree_to_terms" /></dd>
		
		<dt>&nbsp;</dt>
		<dd><input type="submit" name="submit" value="Register" id="submit" /></dd>
	</dl>	
</form>
